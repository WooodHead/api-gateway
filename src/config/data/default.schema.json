{
  "env": {
    "doc": "The application environment.",
    "format": [
      "",
      "lto",
      "production",
      "development",
      "test"
    ],
    "default": "",
    "env": "NODE_ENV"
  },
  "webserver": {
    "doc": "The config of this application, with a namespace so it can be merged into larger configs",
    "logger": {
      "console": {
        "level": {
          "default": "info",
          "env": "WEBSERVER_LOGGER_CONSOLE_LEVEL"
        }
      },
      "combined": {
        "level": {
          "default": "info",
          "env": "WEBSERVER_LOGGER_COMBINED_LEVEL"
        }
      }
    },
    "noauth": {
      "format": "Array",
      "default": [
        "/"
      ]
    },
    "default_api": {
      "default": "http://{api}",
      "env": "WEBSERVER_DEFAULT_API"
    },
    "primary_domain": {
      "default": "localhost",
      "env": "WEBSERVER_PRIMARY_DOMAIN"
    },
    "services": {
      "doc": "Available services within the webserver",
      "format": "Array",
      "default": [
        {
          "id": "flow",
          "domain": "legalflow"
        },
        {
          "id": "events",
          "domain": "legalevents"
        },
        {
          "id": "queuer",
          "domain": "event-queuer"
        }
      ]
    },
    "endpoints": {
      "doc": "Endpoints that are mapped to services",
      "default": {
        "scenarios": "flow",
        "processes": "flow",
        "responses": "flow",
        "identities": "flow",
        "queue": "event-chain",
        "event-chain": "event-chain"
      }
    }
  },
  "lto": {
    "doc": "Global config of the LTO node",
    "api": {
      "key": {
        "default": "",
        "env": "LTO_API_KEY"
      }
    }
  },
  "log": {
    "level": {
      "default": "",
      "env": "LOG_LEVEL"
    }
  },
  "port": {
    "default": 80,
    "env": "PORT"
  }
}